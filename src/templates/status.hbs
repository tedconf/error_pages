<!doctype html>
<html lang=en>
<head>
  <meta charset=utf-8>
  <title>TED | {{code}}: {{title}}</title>
  <meta name=viewport content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body style="background:url(data:image/svg+xml;base64,{{base64 (concat '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0, 0, 100, 100" width="200" height="200"><text x="50" y="50" fill="rgba(0, 0, 0, 0.008)" font-family="sans-serif" font-size="25" font-weight="700" text-anchor="middle" transform="rotate(-45 50,50)">' code '</text></svg>')}})">

<div class="t">
  <div class="t__c">
    <div class="Notice">
      <img src="/assets/{{image}}">

      <h1>{{headline}}</h1>

      {{{message}}}

      {{#if (eq code 404)}}
        <form class="Search" action="https://www.ted.com/search" role="search">
          <input class="Search__input" placeholder="Search TED.com&hellip;" name="q">
          <input class="Search__button" type="submit" value="Go">
        </form>
      {{/if}}

      <div class="Error">
        <a href="https://en.wikipedia.org/wiki/List_of_HTTP_status_codes#{{code}}">HTTP Error {{code}}</a>{{#if error}}:
          {{{error}}}
        {{/if}}
      </div>

      <h2>What's next?</h2>
      <ul>
        <script>if (window.history && window.history.length > 1 && document.referrer && document.referrer.match(/^https?:\/\//)) document.write('<li><a href="#" onclick="history.back();return false" role="button">Go to the previous page</a></li>')</script>
        <li><a href="https://www.ted.com">Go to the TED.com homepage</a></li>
        <li><a href="https://support.ted.com">Visit our Help Desk</a></li>
      </ul>
    </div>
  </div>
</div>

{{> ga}}
<script>ga('send', 'event', 'error', '{{code}}', location.hostname + location.pathname)</script>
</body>
</html>